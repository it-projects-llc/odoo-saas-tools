<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Frontend Assets">

	<xpath expr="//link[last()]" position="after">
		<link rel="stylesheet" type="text/less" href="/saas_portal_signup_custom2/static/src/less/website.ui.components.less"/>
	</xpath>
	<xpath expr="//script[last()]" position="after">
		<script src="/saas_portal_signup_custom2/static/src/js/field_recaptcha.js" />
	</xpath>

</template>

<template id="login_layout" inherit_id="website.login_layout" name="Website Login Layout">
	<xpath expr="//div[@class='oe_website_login_container']" position="attributes">
		<attribute name="class">container oe_website_login_container</attribute>
	</xpath>
</template>

</odoo>
