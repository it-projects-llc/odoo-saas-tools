<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_res_company_terms_n_conds" model="ir.ui.view">
            <field name="name">res.company.terms_n_conds.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[@string='Company']/sheet/notebook/page[@string='Report Configuration']"
                       position="after">
                    <page string="SaaS Configuration">
                        <label for="terms_n_conds"/>
                        <field name="terms_n_conds"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_plans_form">
            <field name="name">saas_portal.plans.form.inherit</field>
            <field name="model">saas_portal.plan</field>
            <field name="inherit_id" ref="saas_portal.view_plans_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[@string='plans']/sheet/notebook/page[@string='Extra Settings']"
                       position="after">
                    <page string="Wizard Settings">
                        <label for="post_install_addons"/>
                        <field name="post_install_addons"/>
                        <field name="custom_addons"
                               attrs="{'invisible':[('post_install_addons', '!=', 'custom')], 'required':[('post_install_addons', '=', 'custom')]}"/>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
